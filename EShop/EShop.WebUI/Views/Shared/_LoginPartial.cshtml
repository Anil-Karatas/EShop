@model LoginViewModel

<form method="post" asp-controller="Auth" asp-action="Login" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
    <div class="d-flex">
       
        <input asp-for="EMail" type="email" class="form-control"  placeholder="email@example.com">
        
        <input asp-for="Password" type="password" class="form-control" placeholder="password">
        <button type="submit" class="btn btn-warning ms-2">Giriş</button>
        <button id="btnİptal" type="button" class="btn btn-outline-warning ms-2">İptal</button>
    </div>

</form>